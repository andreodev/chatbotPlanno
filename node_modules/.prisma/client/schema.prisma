datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Gender {
  male
  female
  other
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  gender     Gender? // Usa o enum Gender aqui
  email      String   @unique
  phone      String?
  password   String
  photo      String?
  role_id    Int      @default(1)
  active     Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  id_sync    String   @unique
}
